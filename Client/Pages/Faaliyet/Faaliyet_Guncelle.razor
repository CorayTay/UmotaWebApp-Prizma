@page "/faaliyet_listef_guncelle/{faaliyetref:int}"

<HeaderSearchBar header="header" ShowSearchSection="false"></HeaderSearchBar>

<FaaliyetEkleGuncelleComponent OnVazgecClicked="goBackTeklifList" logRef="FaaliyetRef"></FaaliyetEkleGuncelleComponent>


@code {

    [Parameter]
    public int FaaliyetRef { get; set; }

    [Inject]
    NavigationManager navigation { get; set; }

    public HeaderBarSearch header = new HeaderBarSearch();

    protected override Task OnInitializedAsync()
    {
        header.HeaderText = "Faaliyet Güncelle";
        return Task.CompletedTask;
    }

    public void goBackTeklifList()
    {
        navigation.NavigateTo("/faaliyet_listef");
    }


}