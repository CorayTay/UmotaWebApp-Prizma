@inherits BaseModalComponent

<div class="card-body">
    <p>@Message</p>
</div>

<div class="row justify-content-center">
    <div class="d-flex">
        <div class="ml-auto p-2">
            <button class="btn btn-danger" @onclick="ConfirmClicked">@YesText</button>
            <button class="btn btn-light" @onclick="CancelClicked">@CancelText</button>
        </div>
    </div>
</div>

@code {

    public async override Task SetParametersAsync(ParameterView parameters)
    {
        Message = parameters.GetValueOrDefault<string>("message") ?? "Mesaj yok";
        YesText = parameters.GetValueOrDefault<string>("yes") ?? "Mesaj yok";
        CancelText = parameters.GetValueOrDefault<string>("cancel") ?? "Mesaj yok";

        await base.SetParametersAsync(parameters);
    }

}